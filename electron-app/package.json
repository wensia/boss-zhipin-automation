{
  "name": "boss-automation-desktop",
  "version": "1.0.0",
  "description": "Boss直聘自动化工具 - Mac桌面版",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:frontend && npm run build:backend && electron-builder",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "node scripts/build-backend.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.boss.automation",
    "productName": "Boss直聘自动化",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Boss直聘自动化安装",
      "icon": "assets/icon.icns"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "frontend-dist/**/*",
      "backend-dist/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "boss",
    "automation",
    "recruitment"
  ],
  "author": "潘宇航",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {}
}
